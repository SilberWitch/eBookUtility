{
    "name": "silberengel/ebookutility",
    "description": "E-book uploader for Nostr curated publications",
    "keywords": ["nostr", "e-book", "publishing"],
    "homepage": "https://gitcitadel.com",
    "license": "MIT",
    "authors": [
      {
        "name": "Silberengel",
        "email": "support@gitcitadel.com",
        "homepage": "https://github.com/SilberWitch",
        "role": "Developer & maintainer"
      }
    ],
    "support": {
      "chat": "https://nosta.me/npub1l5sga6xg72phsz5422ykujprejwud075ggrr3z2hwyrfgr7eylqstegx9z"
    },
    "require": {
      "php": ">=8.1 <8.5",
      "ext-gmp": "*",
      "ext-xml": "*",
      "bitwasp/bech32": "^0.0.1",
      "paragonie/ecc": "^2.4",
      "phrity/websocket": "^3.0",
      "simplito/elliptic-php": "^1.0",
      "swentel/nostr-php": "^1.5.3"
    },
    "require-dev": {
      "friendsofphp/php-cs-fixer": "^3.51",
      "phpunit/phpunit": "^10.5"
    },
    "autoload": {
      "psr-4": {
        "swentel\\nostr\\": "src/"
      }
    },
    "bin": [
      "bin/nostr-php"
    ],
    "config": {
      "platform": {
        "php": "8.1"
      },
      "sort-packages": true
    },
    "scripts": {
      "lint": "@php vendor/bin/php-cs-fixer fix -v"
    }
  }